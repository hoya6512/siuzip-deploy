                  `
                  <tr>
                    <td class="text-center" style="vertical-align: middle">${
                      data.player
                    }</td>
                    <td
                      class="text-center team-bg"
                      style="
                        background-image: url(${data.pl.teamLogo});
                      "
                    >


                      <p class="fs-5">${data.pl.win}/${data.pl.draw}/${
                        data.pl.lose
                      } (${data.pl.goalsDiff})</p>
                      <p class="fs-4">${data.pl.points}점</p>
                      <p class="fs-6">${newPlForm.join("")}</p>
                    </td>
