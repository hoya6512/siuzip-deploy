        <script>
          $(document).ready(function () {
            $.ajax({
              method: "GET",
              url: "/playerStanding",
            }).done(function (결과) {
              결과.forEach(function (data, i) {
                var plForm = [...data.pl.form];
                // console.log(plForm);
                var newPlForm = plForm.map(function (item, index) {
                  if (item == "W") {
                    return `<span class="badge rounded-pill text-bg-success p-1">승</span>`;
                  } else if (item == "D") {
                    return `<span class="badge rounded-pill text-bg-warning p-1">무</span>`;
                  } else if (item == "L") {
                    return `<span class="badge rounded-pill text-bg-danger p-1">패</span>`;
                  }
                });

                var llForm = [...data.ll.form];
                var newLlForm = llForm.map(function (item, index) {
                  if (item == "W") {
                    return `<span class="badge rounded-pill text-bg-success p-1">승</span>`;
                  } else if (item == "D") {
                    return `<span class="badge rounded-pill text-bg-warning p-1">무</span>`;
